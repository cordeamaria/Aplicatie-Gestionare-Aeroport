<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Autentificare Aeroport" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TextField fx:id="usernameField" promptText="Utilizator" maxWidth="200" />
    <PasswordField fx:id="passwordField" promptText="Parolă" maxWidth="200" />

    <HBox spacing="10">
        <Button text="Logare" onAction="#handleLogin" prefWidth="100" />
        <Button text="Vezi Zboruri" onAction="#handleViewFlights" prefWidth="120" />
    </HBox>

    <!-- Tabel zboruri pentru utilizatorii neautentificați -->
    <TableView fx:id="flightTable" prefWidth="600" prefHeight="300">
        <columns>
            <TableColumn fx:id="colCode" text="Cod Zbor" prefWidth="100"/>
            <TableColumn fx:id="colDeparture" text="Plecare" prefWidth="150"/>
            <TableColumn fx:id="colDestination" text="Destinație" prefWidth="150"/>
            <TableColumn fx:id="colDate" text="Data Plecare" prefWidth="150"/>
            <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
        </columns>
    </TableView>
</VBox>

