<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DispatcherController" prefHeight="850" prefWidth="1300">
    <left>
        <VBox spacing="10" prefWidth="200" style="-fx-background-color: #ffffff;">
            <padding><Insets top="20" left="10" bottom="20" right="10"/></padding>
            <Label text="DISPATCHER" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button text="ZBORURI" onAction="#showFlightsPane" prefWidth="180"/>
            <Button text="AERONAVE" onAction="#showFleetPane" prefWidth="180"/>
            <Button text="LISTE UTILIZATORI" onAction="#showUsersPane" prefWidth="180"/>
            <Button text="RAPORTARE" onAction="#showReportPane" prefWidth="180" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
        </VBox>
    </left>
    <center>
        <StackPane>
            <VBox fx:id="userInfoPane" spacing="10">
                <padding><Insets top="20" left="20" bottom="20" right="20"/></padding>
                <Label fx:id="userNameLabel" style="-fx-font-size: 18px;"/><Label fx:id="userRoleLabel"/>
            </VBox>

            <VBox fx:id="flightsPane" spacing="10" visible="false" managed="false">
                <padding><Insets top="10" left="10" bottom="10" right="10"/></padding>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Căutare după Cod: "/><TextField fx:id="searchFlightField" onKeyReleased="#handleSearchFlights" promptText="Ex: RO332"/>
                </HBox>
                <TableView fx:id="flightTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colFlightCode" text="Cod"/><TableColumn fx:id="colDep" text="De la"/><TableColumn fx:id="colDest" text="Spre"/>
                        <TableColumn fx:id="colFlightStatus" text="Status"/><TableColumn fx:id="colEquipment" text="Echipament Sol"/>
                        <TableColumn fx:id="colCrewCount" text="Echipaj"/><TableColumn fx:id="colPassengerCount" text="Pax"/>
                    </columns>
                </TableView>
                <GridPane hgap="10" vgap="5">
                    <TextField fx:id="fCodeF" promptText="Cod" GridPane.columnIndex="0"/><TextField fx:id="fDepF" promptText="Plecare" GridPane.columnIndex="1"/>
                    <TextField fx:id="fDestF" promptText="Spre" GridPane.columnIndex="2"/><ComboBox fx:id="fStatusCombo" promptText="Status" GridPane.columnIndex="3"/>
                    <TextField fx:id="fEquipmentF" promptText="Echipament" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="fCrewF" promptText="Nr. Crew" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                    <TextField fx:id="fPaxF" promptText="Nr. Pax" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                    <HBox spacing="5" GridPane.rowIndex="2" GridPane.columnSpan="4">
                        <Button text="CREATE" onAction="#handleAddFlight" style="-fx-background-color: #2ecc71;"/><Button text="UPDATE" onAction="#handleUpdateFlight" style="-fx-background-color: #3498db;"/><Button text="DELETE" onAction="#handleDeleteFlight" style="-fx-background-color: #e74c3c;"/><Button text="CLEAR" onAction="#clearFlightFields"/>
                    </HBox>
                </GridPane>
            </VBox>

            <VBox fx:id="fleetPane" spacing="10" visible="false" managed="false">
                <padding><Insets top="10" left="10" bottom="10" right="10"/></padding>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Căutare după Cod: "/><TextField fx:id="searchAirField" onKeyReleased="#handleSearchAir" promptText="Ex: YR-BAZ"/>
                </HBox>
                <TableView fx:id="fleetTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colAirCode" text="Cod"/><TableColumn fx:id="colAirModel" text="Model"/><TableColumn fx:id="colAirCap" text="Capacitate"/><TableColumn fx:id="colAirStatus" text="Stare"/><TableColumn fx:id="colAirLoc" text="Locatie"/>
                    </columns>
                </TableView>
                <HBox spacing="5">
                    <TextField fx:id="airCodeF" promptText="Cod"/><TextField fx:id="airModelF" promptText="Model"/><TextField fx:id="airCapF" promptText="Cap."/><TextField fx:id="airLocF" promptText="Locatie"/><ComboBox fx:id="airStatusCombo" promptText="Stare"/>
                </HBox>
                <HBox spacing="5">
                    <Button text="CREATE" onAction="#handleAddAircraft" style="-fx-background-color: #2ecc71;"/><Button text="UPDATE" onAction="#handleUpdateAircraft" style="-fx-background-color: #3498db;"/><Button text="DELETE" onAction="#handleDeleteAircraft" style="-fx-background-color: #e74c3c;"/>
                </HBox>
            </VBox>

            <VBox fx:id="usersPane" spacing="10" visible="false" managed="false">
                <padding><Insets top="10" left="10" bottom="10" right="10"/></padding>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <ComboBox fx:id="roleFilterCombo" promptText="Selectează Rol"/><Button text="RELOAD" onAction="#handleFilterUsers"/>
                </HBox>
                <TableView fx:id="userTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colUserId" text="ID"/><TableColumn fx:id="colUserName" text="User"/><TableColumn fx:id="colUserRole" text="Rol"/><TableColumn fx:id="colUserPass" text="Parola"/>
                    </columns>
                </TableView>
            </VBox>

            <VBox fx:id="reportPane" spacing="10" visible="false" managed="false">
                <padding><Insets top="10" left="10" bottom="10" right="10"/></padding>
                <Label text="Sesizare Problemă Tehnică:" style="-fx-font-weight: bold;"/>
                <TextArea fx:id="problemArea" promptText="Descrieți problema tehnică aici..."/>
                <Button text="SUBMIT" onAction="#handleSubmitProblem" prefWidth="100"/>
            </VBox>
        </StackPane>
    </center>
</BorderPane>